<div class="container">
	<%= link_to 'New post', new_post_path, class: 'btn btn-danger'  %>
	<br>
	<br>
	
		<% @posts.each do |post| %>
		<div class="card">
			<p><%= link_to post.title, post  %></p>
			<hr>
			<p><%= post.content %></p>
			<p>Created by <%= current_user.username %></p>
		</div>
		<br>
		<% end %>
	
</div>


